{
  "extends": ["eslint:recommended"],
  "plugins": ["node"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "node/no-unsupported-features": ["error", {"version": 10}],
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"]
  }
}
